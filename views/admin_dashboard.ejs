<%- include('partials/_head') %>

  <body>
   <!-- Top nav bar (fixed) -->
   <nav>
    <span class="logo">LOGO</span>
    <span class="date_time">
      <%
      let date = new Date();
      const options = {year: 'numeric', month: 'long', day: 'numeric',timeZone: 'America/Edmonton' };
      %>
      <%= date.toLocaleDateString('en-CA',options)  %>
      <%= date.toLocaleTimeString('en-CA', {timeZone: 'America/Edmonton'}) %>
    </span>
    <span class="nav_welcome">Welcome   Admin</span>
  </nav>
    <!-- New tweet post and tweets container-->
    <main id="container">
      <section id="new-tweet">

        <table>
          <thead>
            <tr><th colspan="6" class="table_title">ORDERS</th></tr>
          <tr>
            <th>ID</th>
            <th>Order Name</th>
            <th>Phone Num</th>
            <th>Total Amount</th>
            <th>Order Status</th>
            <th>ETA</th>
          </tr>
          </thead>
          <tbody>
            <% for(let order of ordersDb) { %>
              <tr>
                <td><a href="/admin/<%= order['id'] %>"><%= order["id"] %></a></td>
                <td><%= order["name"] %></td>
                <td><%= order["phone"] %></td>
                <td><%= order["subtotal"] %></td>
                <td><%= order["status"] %></td>
                <td><%=  order["order_datetime"].toLocaleTimeString('en-CA', {timeZone: 'America/Edmonton'}) %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        </section>

    </main>
    <footer>

    </footer>

    </body>
</html>
