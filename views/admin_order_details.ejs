<%- include('partials/_head') %>

<body>
 <!-- Top nav bar (fixed) -->
 <nav>
  <span class="logo">LOGO</span>
  <span class="date_time">
    <%
    let date = new Date();
    const options = {year: 'numeric', month: 'long', day: 'numeric',timeZone: 'America/Edmonton' };
    %>
    <%= date.toLocaleDateString('en-CA',options)  %>
    <%= date.toLocaleTimeString('en-CA', {timeZone: 'America/Edmonton'}) %>
  </span>
  <span class="nav_welcome">Welcome   Admin</span>
</nav>
  <!-- New tweet post and tweets container-->
  <main id="container">
    <section id="new-tweet">

      <table>
        <thead>
          <tr><th colspan="5" class="table_title">ORDER DETAILS for <%= orderId %></th></tr>
        <tr>
          <th>ID</th>
          <th>Dish name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Sub Total</th>
        </tr>
        </thead>
        <tbody>
          <% for(let item of anOrder) { %>
            <tr>
              <td><%= item["id"] %></td>
              <td><%= item["item"] %></td>
              <td>$<%= item["price"] %></td>
              <td><%= item["qty"] %></td>
              <td>$<%= item["subtotal"] %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
    <form class="form-inline" action="/admin/<%= orderId %>" method="POST">
      <div class="form-group mb-2"><br>
        <label for="maxTime">Estimated Time (minutes) : <%=maxTime%></label>
        <input class="form-control" type="text" size="5" name="maxTime" value="<%=maxTime%>" hidden placeholder="0"><br>
        <label for="maxTime">Add Extra Time (minutes)   :</label>
        <input class="form-control" type="text" size="5" name="addTime" value="0" placeholder="0"><br><br>
        <button type="submit" id="accept-order" class="btn btn-primary">ACCEPT ORDER</button>
      </div>
    </form>

  </main>
  <footer>

  </footer>

  </body>
</html>
